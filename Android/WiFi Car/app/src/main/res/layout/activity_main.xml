<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.adc.pirobot.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mqtt_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10px"
            android:text="MQTT status"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/colorAccent"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/xAccelerometer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10px"
            android:text="Accel X"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/yAccelerometer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10px"
            android:text="Accel Y"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/zAccelerometer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10px"
            android:text="Accel Z"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/actionY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10px"
            android:text="ActionY"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/actionZ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10px"
            android:text="ActionZ"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="30sp" />
    </LinearLayout>

</RelativeLayout>
